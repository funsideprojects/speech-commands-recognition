{
  "defaultSeverity": "warn",
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ],
  "rules": {
    "prettier": [
      true,
      ".prettierrc",
      {
        "editorconfig": false
      }
    ],
    "ordered-imports": [
      false
    ],
    "member-ordering": [
      false
    ],
    "curly": [
      true,
      "ignore-same-line"
    ],
    "interface-name": false,
    "array-type": [
      true,
      "generic"
    ],
    "member-access": [
      true
    ],
    "no-empty-interface": true,
    "no-empty": [
      true,
      "allow-empty-catch",
      "allow-empty-functions"
    ],
    "object-literal-sort-keys": false,
    "no-unused-expression": true,
    "max-classes-per-file": [
      true,
      1
    ],
    "variable-name": {
      "options": [
        "require-const-for-all-caps",
        "allow-leading-underscore",
        "allow-pascal-case",
        "check-format",
        "ban-keywords"
      ]
    },
    "one-line": [
      true,
      "check-catch",
      "check-finally",
      "check-else"
    ],
    "one-variable-per-declaration": true,
    "no-string-literal": false,
    "no-bitwise": false,
    "no-console": [
      true,
      "warn"
    ],
    "no-string-throw": true,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "newline-before-return": true,
    "radix": false,
    "align": [
      true,
      "parameters",
      "statements"
    ],
    "arrow-parens": true,
    "eofline": true,
    "import-spacing": true,
    "indent": [
      true,
      "spaces",
      2
    ],
    "jsdoc-format": true,
    "max-line-length": [
      true,
      {
        "limit": 120,
        "ignore-pattern": "^import |^export {(.*?)}",
        "check-regex": false
      }
    ],
    "new-parens": true,
    "no-consecutive-blank-lines": true,
    "no-irregular-whitespace": true,
    "no-trailing-whitespace": true,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": false,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "typeLiterals": "ignore"
        },
        "singleline": "never"
      }
    ],
    "jsx-boolean-value": false,
    "jsx-no-lambda": false,
    "jsx-self-close": false
  },
  "linterOptions": {
    "exclude": [
      "node_modules/**/*.ts",
      "src/serviceWorker.js",
      "config-overrides.js"
    ]
  }
}